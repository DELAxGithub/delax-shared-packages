{
  "name": "@delax/shared-packages",
  "version": "0.1.0",
  "description": "Technical heritage and shared packages for DELAX projects",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*",
    "tools/*",
    "templates/*",
    "native-tools/*",
    "automation/*"
  ]
}